<% breadcrumb :words %>

<h3>尻取りしましょ</h3>

<% unless @new_word.nil? %>
  <h1>【<%= @new_word.content %>】</h1>
<% end %>

<%= form_for(@word) do |f| %>

  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h3>入力した内容にエラーが<%= @word.errors.count %>件あります</h3>
      <ul>
        <% @word.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

  <p>
  <%= f.label :content, '次のことばは…' %>
  <%= f.text_field :content %>

  <%= f.submit '尻取り！' %>
  </p>
<% end %>

<ul>
  <% @words.each do |word| %>
    <li><%= word.user.username %>【<%= word.content %>】　使い方は、word.id:<%= link_to word.id, word %></li>
  <% end %>
  <p><%= paginate @words %></p>
</ul>

<p>ユーザーID(テスト用)：<%= current_user.id %>
<%= link_to current_user.username, words_path(current_user) %></p>
