<script>
//更新
function koshin(){
  location.reload();
}
</script>

<% breadcrumb :words %>

<h3>尻取りしましょ</h3>

<% unless @new_word.nil? %>
  <h1>【<%= @new_word.content %>】</h1>
  <form>念のため、<input class="btn btn-link" type="button" value="最新の尻取りに！" onclick="koshin()"></form>
<% end %>

<p>
  <div class="input-sm">
  <% unless current_user.username == "名無しの権兵衛" %>
    <%= form_for(@q, url: words_path, method: :get) do |f| %>
      <%= f.submit '自分の尻取り一覧', class: "btn btn-link" %>
    <% end %>
  <% end %>
  </div>

<p>
<%= form_for(@word) do |f| %>
 <!--楽観的ロック!-->
 <!-- <%= f.hidden_field :lock_version %> -->
  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h5>エラーは次の<%= @word.errors.count %>つ。</h5>

      <ul>
      <% @word.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">

  <div class="form-group col-xs-5">
    <!-- <form class="form-inline"> -->
      <%= f.label :content, '次は…' %>
      <%= f.text_field :content, autofocus: true, class: 'form-control' %>
      <%= f.submit '尻取り！', class: 'btn btn-link' %>
    <!-- </form> -->
  </div>

  <div class="form-group col-xs-3 input-sm">
  <% unless current_user.username == "名無しの権兵衛" %>
    <%= link_to 'なおす', edit_word_path(@new_word), class: "btn btn-link" %><br>
    <%= link_to 'やめる', @new_word, method: :delete, data: { confirm: '例文も消えちゃうよ' }, class: "btn btn-link" %>
  <% end %>
  </div>

  <div class="form-group col-xs-3 input-sm">
      <%= f.label :category, 'お題を決める' %>(空っぽ可)
      <%= f.select :category, [["", ""], ["フィクション","フィクション"], ["生き物","生き物"], ["食い物","食い物"], ["飲み物","飲み物"], ["乗り物","乗り物"], ["形容詞","形容詞"], ["動詞","動詞"]], class: 'form-control' %>
  </div>

<% end %>

</div>

<div class="input-sm">
<%= search_form_for @search do |f| %>
  <%= f.label :content_eq, 'もうあるか' %>
  <%= f.text_field :content_eq %>
  <%= f.submit 'さがす', class: "btn btn-link" %>
  <% if @search_words.nil? == false %>
   <% @search_words.each do |sw| %>
     ⇒あった！【<%= link_to sw.content, sw %>】
   <% end %>
   <% if @search_words == [] %>
     ⇒ない</p>
   <% end %>
  <% end %>
<% end %>
</div>


<p>
<!-- <div align=center class="input-sm"> -->
<div align=center><%= paginate @words, :window => 10 %><br></div>

<p>

<table class="table table-striped">
  <thead>
    <tr class="input-sm">
    <th>尻取りした人</th>
    <th>尻取り</th>
    <th>お題</th>
    <th>例文数</th>
    <% if current_user.username == "名無しの権兵衛" %>
    <th class="input-sm">例文見るなら</td>
   <% else %>
    <th>例文書いて...</td>
   <% end %>
    </tr>
  </thead>

  <tbody>
  <% @words.each do |word| %>

    <tr>
    <td><%= word.user.username %></td>
    <td>【<%= word.content %>】</td>
    <td class="input-sm"><%= word.category %></td>
    <%
      youreis = []
      w = Word.where(content: word.content)
      w.each do |a|
       # youreis << a.youreis.order(id: "DESC").page(params[:page]).per(20)
       youreis << a.youreis.order(id: "DESC")
      end
    %>
    <% if youreis != nil %>
    <% count = 0 %>
    <% youreis.each do |c| %>
     <% count += c.count %>
    <% end %>
    <td><%= count %></td>
    <% if current_user.username == "名無しの権兵衛" %>
    <td class="input-sm">ログインを...</td>
    <% else %>
    <td><%= link_to "➡", word, class: "btn btn-primary" %></td>
   <% end %>
  </tr>
  <% end %>

  <% end %>
  </tbody>
</table>

