  location.reload();
}
</script>

<% breadcrumb :words %>

<h3>尻取りしましょ</h3>

<% unless @new_word.nil? %>
  <h1>【<%= @new_word.content %>】</h1>
  <form>念のため、最新の尻取りに<input type="button" value="更新！" onclick="koshin()"></form>
<% end %>

<p>

<%= form_for(@word) do |f| %>
 <!--楽観的ロック!-->
 <!-- <%= f.hidden_field :lock_version %> -->
  <% if @word.errors.any? %>
    <div id="error_explanation">
      <h5>エラーは次の<%= @word.errors.count %>つ。</h5>

      <ul>
      <% @word.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">

  <div class="form-group col-xs-6">
    <form class="form-inline">
      <%= f.label :content, '次のことばは…' %>
      <%= f.text_field :content, class: 'form-control' %>
      <%= f.submit '尻取り！', class: 'btn btn-primary' %>
    </form>
  </div>

  <div class="form-group col-xs-3 input-sm">
      <%= f.label :category, 'お題決める？' %>(空っぽでもいい)
      <%= f.text_field :category, class: 'form-control' %>
  </div>

<% end %>

</div>

