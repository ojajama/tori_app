<ul class="media-list">
  <% words.each do |word| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(word.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to word.username, user_path(word.user) %> <span class="text-muted">posted at <%= word.created_at %></span>
        </div>
        <div>
          <p><%= word.content %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate words %>
</ul>
